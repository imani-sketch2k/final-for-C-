namespace FinalMuganza.Models
{
    public class StudentWorkerModel : Student
    {
        public double HourlyPay { get; set; }
        public int HoursWorked { get; set; }

        // Parameterless constructor
        public StudentWorkerModel() :base() 
        {
        }

        // Parameterized constructor
        public StudentWorkerModel(string name, string id, double hourlyPay, int hoursWorked)
            : base(name, id)
        {
            HourlyPay = hourlyPay;
            HoursWorked = hoursWorked;
        }

        public double WeeklySalary()
        {
            if (HourlyPay < 7.25 || HourlyPay > 14.75 || HoursWorked < 1 || HoursWorked > 15)
            {
                return 0;
            }
            return HourlyPay * HoursWorked;
        }
    }
}
