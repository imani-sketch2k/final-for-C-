
public class StudentWorker : Student
{
    public decimal HourlyPay { get; set; }
    public int HoursWorked { get; set; }

    public decimal WeeklySalary()
    {
        const decimal MinimumHourlyPay = 7.25m;
        const decimal MaximumHourlyPay = 14.75m;
        const int MinimumHoursWorked = 1;
        const int MaximumHoursWorked = 15;

        if (HourlyPay < MinimumHourlyPay || HourlyPay > MaximumHourlyPay ||
            HoursWorked < MinimumHoursWorked || HoursWorked > MaximumHoursWorked)
        {
            return 0;
        }

        return HourlyPay * HoursWorked;
    }
}
